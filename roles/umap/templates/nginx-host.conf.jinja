{% call server(umap__acme_certificates[0].domains, http='forward', https='umapde') %}

    # Verwende erweitertes anonymized Format mit zus√§tzlichen Metriken
    access_log /var/log/nginx/umapde-access.log anonymized_extended;
    error_log /var/log/nginx/umapde-error.log;
    
    # Allow larger request bodies for datalayer updates
    client_max_body_size 200M;
    client_body_buffer_size 4M;

    # X-Accel-Redirect for secure GeoJSON delivery
    location /internal/ {
        internal;
        gzip_vary on;
        gzip_static on;
        # Next line is very important!
        add_header X-DataLayer-Version $upstream_http_x_datalayer_version;
        alias {{ umap__paths.host.media_root }}/;
    }

    # Handle uMap datalayer URLs
    location ~ ^/[a-z][a-z]/datalayer/ {
        proxy_pass http://127.0.0.1:{{ umap__proxy_port }};
        proxy_redirect     off;
        proxy_set_header   Host               $http_host;
        proxy_set_header   X-Real-IP          $remote_addr;
        proxy_set_header   X-Forwarded-For    $proxy_add_x_forwarded_for;
        proxy_set_header   X-Forwarded-Proto  $scheme;
        
        # Performance optimizations
        proxy_buffering on;
        proxy_buffer_size 4k;
        proxy_buffers 8 4k;
        proxy_connect_timeout 5s;
        proxy_send_timeout 120s;
        proxy_read_timeout 120s;
    }

    location / {
        proxy_pass http://127.0.0.1:{{ umap__proxy_port }};
        proxy_redirect     off;
        proxy_set_header   Host               $http_host;
        proxy_set_header   X-Real-IP          $remote_addr;
        proxy_set_header   X-Forwarded-For    $proxy_add_x_forwarded_for;
        proxy_set_header   X-Forwarded-Proto  $scheme;

        # Performance optimizations
        proxy_buffering on;
        proxy_buffer_size 4k;
        proxy_buffers 8 4k;
        proxy_connect_timeout 5s;
        proxy_send_timeout 120s;
        proxy_read_timeout 120s;

        # WebSocket support for realtime functionality
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
    }

{% endcall %}
