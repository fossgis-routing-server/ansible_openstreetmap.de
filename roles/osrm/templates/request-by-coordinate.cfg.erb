[global]
environment = 'production'
log.error_file = '/var/log/r/error.log'

[modes]
modes: ["{{ "\", \"".join(osrm.profiles.keys()) }}"]

{% for mode in osrm.profiles.keys() %}
[{{ mode }}]
servers: ["{{ "\", \"".join(osrm.profiles[mode]) }}"]
{% for modereg in osrm.profiles[mode] -%}
url_{{ modereg }}: "http://{{ osrm.profilearea[modereg].host }}.openstreetmap.de:{{ osrm.profilearea[modereg].port }}"
polygon_{{ modereg }}: {% if loop.index == 1 %}None{% else %}{{ osrm.profilearea[modereg].poly }}{% endif %}

{% endfor %}

{% endfor %}
